<h1>Calendario de corridas</h1>
<table class="table1">
<% @races.each do |race| %>
  <tr>
    <td>
      <%= render :partial => "date_box", :locals => { :race => race } %>
    </td>
    <td class='title'>
      <%= link_to race.name, race.url %>
    </td>
    <td>
      <%= race.distance %>
    </td>    
    <% if current_user %>
    <td>
      <% if !current_user.races.include?(race) %>
        <%= link_to t(:do_subscription).downcase, subscriptions_path(race), :method => :post %>
      <% else %>
        <%= link_to t(:unsubscribe).downcase, subscriptions_path(race), :method => :delete %>
      <% end %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>